{
  "name": "simple-thermostat",
  "version": "0.13.0",
  "description": "A different take on the thermostat card for Home Assistant Lovelace UI",
  "main": "simple-thermostat.js",
  "repository": "git@github.com:nervetattoo/simple-thermostat.git",
  "author": "Raymond Julin <raymond.julin@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@polymer/polymer": "^3.1.0",
    "lit-element": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "prettier": "1.15.3",
    "pretty-quick": "^1.8.0",
    "release-it": "^9.8.1",
    "rollup": "^1.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.2",
    "tracker-json": "^1.1.0"
  },
  "scripts": {
    "release": "release-it",
    "build": "NODE_ENV=production rollup -c"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "tracker-json": {
    "simple-thermostat": {
      "repo": "nervetattoo/simple-thermostat",
      "file": "simple-thermostat.min.js"
    }
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "simple-thermostat.*"
      ]
    },
    "scripts": {
      "afterBump": "npx tracker-json"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
