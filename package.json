{
  "name": "simple-thermostat",
  "version": "0.25.0",
  "description": "A different take on the thermostat card for Home Assistant Lovelace UI",
  "main": "src/index.js",
  "repository": "git@github.com:nervetattoo/simple-thermostat.git",
  "author": "Raymond Julin <raymond.julin@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "debounce-fn": "^3.0.1",
    "lit-element": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/register": "^7.4.4",
    "ava": "^1.4.1",
    "husky": "^2.3.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.10.0",
    "release-it": "^12.1.0",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-minify-html-literals": "^1.2.2",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "tracker-json": "^1.2.0"
  },
  "scripts": {
    "release": "release-it",
    "test": "ava",
    "build": "NODE_ENV=production rollup -c"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "tracker-json": {
    "simple-thermostat": {
      "repo": "nervetattoo/simple-thermostat",
      "file": "simple-thermostat.js",
      "resolve": "gh:release"
    }
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "simple-thermostat.*"
      ]
    },
    "scripts": {
      "afterBump": "npx tracker-json",
      "beforeStart": "yarn build",
      "afterRelease": "rm simple-thermostat.js"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ]
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  }
}
